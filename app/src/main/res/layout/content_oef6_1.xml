<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Oef6_1Activity"
    tools:showIn="@layout/activity_oef6_1">

    <LinearLayout
        android:id="@+id/layout_oef6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/blij"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50px"
                android:src="@drawable/blij"
                android:tag="blij"
                android:onClick="volgend"/>

            <ImageView
                android:id="@+id/droevig"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50px"
                android:src="@drawable/droevig"
                android:tag="droevig"
                android:onClick="volgend"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/woord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="test"
            android:textAlignment="center"
            android:textSize="60px"/>

        <ImageView
            android:id="@+id/afbeelding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/voormeting_duikbril" />



    </LinearLayout>


    <ImageView
        android:id="@+id/kaat"
        android:layout_width="245dp"
        android:layout_height="226dp"
        android:src="@drawable/kaat"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>