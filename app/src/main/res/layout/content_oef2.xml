<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Oef2Activity"
    tools:showIn="@layout/activity_oef2">

    <LinearLayout
        android:id="@+id/layout_oef1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/woord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="test"
            android:textAlignment="center"
            android:onClick="herhaalUitleg"
            android:textSize="100px" />

        <ImageView
            android:layout_marginTop="140dp"
            android:id="@+id/afbeelding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="volgendWoord"
            android:src="@drawable/voormeting_kamp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/kaat"
        android:layout_width="245dp"
        android:layout_height="226dp"
        android:src="@drawable/kaat"
        android:onClick="herhaalUitleg"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>