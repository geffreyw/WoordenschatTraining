<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Oef6_2Activity"
    tools:showIn="@layout/activity_oef6_2">

    <LinearLayout
        android:id="@+id/layout_oef6"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bij"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bij" />

        <TextView
            android:id="@+id/woord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="duikbril"
            android:onClick="herhaalZin"
            android:textAlignment="center"
            android:textSize="100px" />

        <ImageView
            android:id="@+id/afbeelding"
            android:layout_width="514dp"
            android:layout_height="match_parent"
            android:src="@drawable/voormeting_duikbril"
            android:onClick="volgendWoord"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>